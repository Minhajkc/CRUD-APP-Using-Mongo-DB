<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Edit Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: rgb(255, 255, 255);
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        #first {
           background-color: rgb(0, 0, 0);
            border-radius: 10px;
            color: white;
            max-width: 400px;
            width: 100%;
            padding: 20px;
            box-sizing: border-box;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); 
        }

        h1 {
            color: white;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            color: white;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
            margin-top: 10px;
        }

        .btn-warning {
            margin-top: 0;
        }

        .text-white {
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <div class="container mt-5 p-5 " id="first">
        <h1>Edit User</h1>
        <form action="/update/<%= user.id %>" method="post" onsubmit="return validateForm()">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" value="<%= user.name %>" required>
                <p id="forname" class="text-white"></p>
            </div>

            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="tel" class="form-control" id="phone" name="phone" placeholder="Enter your phone number" value="<%= user.phone %>" required>
                <p id="forno" class="text-white"></p>
            </div>

            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" class="form-control" name="age" id="age" placeholder="Enter your age" value="<%= user.age %>" required>
                <p id="forage" class="text-white"></p>
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" value="<%= user.email %>" required>
                <p id="formail" class="text-white"></p>
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>
        <form action="/homemy">
            <button type="submit" class="btn btn-warning">Home</button>
        </form>
    </div>

    <script>
        function validateForm() {
            let name1 = document.getElementById('name').value;
            let namevalue = document.getElementById('forname');
            let phone1 = document.getElementById('phone').value;
            let phonevalue = document.getElementById('forno');
            let age1 = document.getElementById('age').value;
            let agevalue = document.getElementById('forage');
            let mail1 = document.getElementById('email').value;
            let mailvalue = document.getElementById('formail');

            if (name1 === '') {
                namevalue.innerHTML = "Enter a Name*";
                return false;
            } else {
                namevalue.innerHTML = '';
            }
            if (phone1 === '') {
                phonevalue.innerHTML = "Enter a Number*";
                return false;
            } else {
                phonevalue.innerHTML = '';
            }
            if (age1 === "") {
                agevalue.innerHTML = "Enter Age*";
                return false;
            } else {
                agevalue.innerHTML = '';
            }
            if (mail1 == '') {
                mailvalue.innerHTML = "Enter a Email*";
                return false;
            } else {
                mailvalue.innerHTML = '';
            }
            return true;
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
